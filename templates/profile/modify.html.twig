{% extends 'base.html.twig' %}

{% block title %}Édition du profil{% endblock %}
{% block stylesheetsAdd %}
    <link rel="stylesheet" href="{{ asset('css/profileShow.css') }}">{% endblock %}
{% block body %}
    <h1 class="neon">[ Modification de {{ app.user.nickname }} ]</h1>
    <div class="container">
    {% if is_granted('IS_AUTHENTICATED_FULLY') or is_granted('IS_AUTHENTICATED_REMEMBERED') %}

        <div class="full">
            {{ form_start(form) }}
            <div class="form-row">
                <div class="form-group col-md-6">
                    {{ form_row(form.nickname) }}
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    {{ form_row(form.firstname) }}
                </div>
                <div class="form-group col-md-6">
                    {{ form_row(form.lastname ) }}
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    {{ form_row(form.mail) }}

                </div>
                <div class="form-group col-md-6">
                    {{ form_row(form.phone) }}
                </div>
            </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                {{ form_row(form.password) }}
            </div>
            <div class="form-group col-md-6">
                {{ form_row(form.confirmPassword) }}
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                {{ form_row(form.url_photo) }}
            </div>
            <div class="form-group col-md-6">
                {{ form_row(form.site) }}
            </div>
        </div>
        <!--TODO non terminé -->
            <a href="{{ path('welcome') }}">
                <button class="btn btn-primary">Annuler</button>
            </a>
        <input type="submit" class="btn btn-success" value="Modifer">
        {{ form_end(form) }}


        </div>

    {% endif %}
    </div>
{% endblock %}