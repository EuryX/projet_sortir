{% extends 'base.html.twig' %}

{% block title %}Hello ProfileController!{% endblock %}

{% block body %}
    <div class="container">
        <h2>Edit du profil de {{ app.user.nickname }}</h2>
        {%if is_granted('IS_AUTHENTICATED_FULLY') %}
            {{ form_start(form) }}
            {{ form_row(form.nickname, {'attr':{'class': 'col-3'}}) }}
            {{ form_row(form.firstname, {'attr':{'class': 'col-5'}}) }}
            {{ form_row(form.lastname, {'attr':{'class': 'col-5'}}) }}
            {{ form_row(form.phone, {'attr':{'class': 'col-5'}}) }}
            {{ form_row(form.mail, {'attr':{'class': 'col-5'}}) }}
            {{ form_row(form.password, {'attr':{'class': 'col-5'}}) }}
            {{ form_row(form.url_photo, {'attr':{'class': 'col-5'}}) }}
            {{ form_row(form.site, {'attr':{'class': 'col-5'}}) }}
            <!--TODO non terminÃ© -->
            <a href="{{ path('welcome') }}"><button class="btn btn-primary">Annuler</button></a>
            <input type="submit" class="btn btn-success" value="Modifer">
            {{ form_end(form) }}
        {% endif %}
    </div>
{% endblock %}