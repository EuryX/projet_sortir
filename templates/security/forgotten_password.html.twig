{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}
{% block stylesheetsAdd %}
    <link rel="stylesheet" href="{{ asset('css/login.css') }}">{% endblock %}

{% block body %}
    <form class="container" method="post">

        <h1 class="h3 mb-3 font-weight-normal">Mot de passe oublié</h1>
        <label for="inputEmail" class="sr-only">Email</label>
        <input type="email" name="email" id="inputEmail" class="form-control" placeholder="Email" required autofocus>
        <input type="tel" name="tel" id="inputTel" class="form-control" placeholder="Téléphone" required>
        <button class="btn btn-lg btn-primary" type="submit">
            Envoyer un code d'accès
        </button>

    </form>
{% endblock %}
