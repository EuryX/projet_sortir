{% extends 'base.html.twig' %}

{% block title %}Création Compte{% endblock %}
{% block body %}
    <h1 class="neon">[ Créer un compte ]</h1>
    <div class="container">
        {{ form_start(form) }}

        <div class="full">
            {{ form_start(form) }}
            <div class="form-row">
                <div class="form-group col-md-6">
                    {{ form_row(form.nickname) }}
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    {{ form_row(form.firstname) }}
                </div>
                <div class="form-group col-md-6">
                    {{ form_row(form.lastname , { 'attr' : {'placeholder' : 'Nom'}}) }}
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    {{ form_row(form.mail) }}
                </div>
                <div class="form-group col-md-6">
                    {{ form_row(form.phone) }}
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    {{ form_row(form.password) }}
                </div>
                <div class="form-group col-md-6">
                    {{ form_row(form.confirmPassword) }}
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    {{ form_row(form.url_photo) }}
                </div>
                <div class="form-group col-md-6">
                    {{ form_row(form.site) }}
                </div>
            </div>

            <input class="btn btn-primary" type="submit" name="Créer" value="S'enregistrer">
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}