{% extends 'base.html.twig' %}

{% block title %}Réinitialiser le mot de passe{% endblock %}
{% block stylesheetsAdd %}
    <link rel="stylesheet" href="{{ asset('css/login.css') }}">{% endblock %}

{% block body %}
    <form class="container" method="post">

        <h1 class="h3 mb-3 font-weight-normal">Réinitialiser le mot de passe</h1>
        <label for="inputEmail" class="sr-only">Email</label>
        <input type="email" name="email" id="inputEmail" class="form-control" placeholder="Email" required autofocus>
        <label class="sr-only">Code de confirmation</label>
        <input type="number" name="confirm" id="confirm" class="form-control" placeholder="Code de confirmation" required>
        <label for="inputPassword" class="sr-only">Nouveau mot de passe</label>
        <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Nouveau mot de passe" required>
        <label for="inputPassword" class="sr-only">Confirmer mot de passe</label>
        <input type="password" name="confpass" id="inputPassword" class="form-control" placeholder="Confirmer mot de passe" required>


        <button class="btn btn-lg btn-primary" type="submit">
            Enregistrer
        </button>
    </form>
{% endblock %}