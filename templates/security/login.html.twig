{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}
{% block stylesheetsAdd %}
    <link rel="stylesheet" href="{{ asset('css/login.css') }}">{% endblock %}
{% block body %}


    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <h1 class="neon">[ Login ]</h1>

    <form class="container" action="{{ path('login') }}" method="post">

        <label for="username">Pseudo ou mail :</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}"/>
        <label for="password">Password :</label>
        <input type="password" id="password" name="_password"/>
        <div>
            <input type="checkbox" id="remember_me" name="_remember_me" checked/>
            <label for="remember_me">Se souvenir de moi</label>
        </div>
        <button class="btn btn-primary" type="submit">login</button>
        <div>
            <a class="mdp" href="{{ path('app_forgotten_password') }}">Mot de passe oubli√©</a>
        </div>
    </form>
{% endblock %}
